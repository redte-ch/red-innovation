---

interface Props { //typescript
	title: string;
}

const { title } = Astro.props;
---

<div class="card01">
    <h1>{ title }</h1>
    <p class="py-4">
        <slot/>
    </p>
</div>


<style>

    .card01 {
        margin: 2rem auto;
        padding: 2rem;
        background-color: var(--color-white);
        max-width: var(--w-max);
        overflow: hidden;
    }

    h1 {
        color: var(--color-black, inherit);
        border-color:  var(--color-red);
        border-bottom-width: 6px;
    }
</style>