    </div>
  </div>
</section>

<style>
  /* -------------------- Contenedor --------------------- */

  .container-about {
    min-height: 540px;
    display: grid;
    grid-template-columns: 1fr 2fr;
    margin: 2rem auto;
    background-color: var(--color-white);
    max-width: var(--w-max);
    overflow: hidden;
    margin-bottom: 4rem;
  }

  /* -------------------- Lado A : Imagen, rectangulo --------------------- */

  .a-side {
    background-color: rgba(186, 186, 186, 0.8);
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .as-image {
    margin: 2rem auto;
    max-width: 200px;
  }
  .as-rect {
    background-color: var(--color-lired);
    min-height: 2rem;
    width: 100%;
  }

  /* -------------------- Lado B : Titulo y Texto --------------------- */

  .b-side {
    background-color: rgba(84, 84, 84, 0.8);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  .bs-container-titulo {
    min-height: 100px;
    padding: 1rem;
    align-self: center;
  }

  .bs-titulo {
    color: var(--color-white);
    padding-bottom: 2rem;
    border-color: var(--color-violet);
    border-bottom-width: 1rem;
  }

  .bs-container-about-p {
  }
  .bs-about-p {
    color: var(--color-white);
    padding: 1rem 2rem;
  }

  /* -------------------- Media query 768px --------------------- */

  @media screen and (max-width: 768px) {
    .container-about {
      min-height: 480px;
    }

    .a-side {
      margin-left: 0px;
      margin-right: 0px;
    }
  }

  /* -------------------- Media query 600 px --------------------- */

  @media screen and (max-width: 600px) {
    .container-about {
      min-height: fit-content;
      grid-template-columns: 1fr;
    }

    .as-rect {
        min-height: 100%;
        width: 1.8rem;
    }

    .bs-container-titulo {
      padding: 1rem;
      align-self: center;
    }

    .bs-titulo {
      border-bottom-width: 1.8rem;
    }

    .as-image {
      max-width: 240px;
    }
  }

  /* -------------------- Media query 425 px --------------------- */

  @media screen and (max-width: 425px) {
    .a-side {
    }

    .bs-container-titulo {
      padding: 1rem;
    }

    .bs-titulo {
      padding-bottom: 1rem;
      border-bottom-width: 1rem;
    }

    .as-image {
      max-width: 180px;
    }

 
  }
</style>
